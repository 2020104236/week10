#include <iostream>
#include <fstream>
using namespace std;
int main() {
	int n[2],m; float x[4];
	int* k; float* j;
	ifstream xx("akali.dat", ios::binary | ios::in);
	if (!xx) return 666;
	xx.read((char*)n, 2 * sizeof(int));
	xx.read((char*)x, 4 * sizeof(float));
	xx.read((char*)&m, sizeof(int));
	k = new int[n[1] - n[0] + 1];
	j = new float[m];
	xx.read((char*)k, (n[1] - n[0] + 1) * sizeof(int));
	xx.read((char*)j, m * sizeof(float));
	xx.close();
	cout << "N1 :"<<n[0] << "   N2 : " << n[1] << endl;
	cout <<"a = "<< x[0] << "   b= " << x[1] << "   x0 = " << x[2] << "   dx =" << x[3] << endl;
	cout <<"m = "<< m << endl;
	cout << "Sigma N" << endl;
	for (int i = 0; i < n[1] - n[0] + 1; i++) {
		cout << k[i] << endl;
	}
	cout << "ax+b" << endl;
	for (int i = 0; i < m; i++) {
		cout << j[i] << endl;
	}
	return 123;
}
